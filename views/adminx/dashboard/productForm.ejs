    </div>
    <div class="row">
      <div class="col-12 mb-3">
        <label for="input1" class="form-label">
          product description
          <span id="description-error" class="text-lowercase error-msg"></span>
        </label>
        <textarea
          name="description"
          id="description"
          placeholder="enter product description max 200 words"
          rows="5"
          name="description"
        ></textarea>
      </div>
    </div>

    <%#<!-- todo: product image setting -->%>
    <div class="row">
      <div class="col-12 mb-3">
        <label for="input1" class="form-label">
          upload product images
          <span class="text-secondary text-lowercase font-xsm">
            *Supported types jpeg,jpg,png</span
          >
          <span id="file-error" class="text-lowercase error-msg"></span>
        </label>
        <%# progress bar %>
        <div class="progress mb-3 d-none">
          <div
            class="progress-bar progress-bar-striped"
            role="progressbar"
            aria-valuenow="0"
            aria-valuemin="0"
            aria-valuemax="100"
          ></div>
        </div>
        <input
          class="form-control"
          type="file"
          name="image"
          id="fileUpload"
          accept="image/x-png,image/jpg,image/jpeg"
          required
        />
      </div>
    </div>
    <div class="row">
      <div class="col-lg-6 mb-3">
        <button type="button" class="btn btn-outline-primary w-100" id="addBtn">
          add product
        </button>
      </div>
      <div class="col-lg-6">
        <button
          type="button"
          class="btn btn-outline-danger w-100"
          id="resetBtn"
        >
          reset details
        </button>
      </div>
    </div>
