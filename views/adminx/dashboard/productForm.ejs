      <div class="col-lg-4 mb-3">
        <label for="price" class="form-label"
          >price
          <span id="price-error" class="text-lowercase error-msg"></span>
        </label>
        <input
          type="text"
          class="form-control"
          placeholder="price in INR"
          id="price"
          name="price"
        />
      </div>

      <div class="col-lg-3 mb-3">
        <label for="discount" class="form-label">
          discount
          <span class="text-secondary text-lowercase font-xsm">*optional</span>
          <span id="discount-error" class="text-lowercase error-msg"></span>
        </label>
        <input
          type="text"
          class="form-control"
          placeholder="discount rate"
          id="discount"
          value="NA"
          name="discount"
        />
      </div>

            <div class="col-lg-5 mb-3">
        <label for="quantity" class="form-label">
          product quantity
          <span id="quantity-error" class="text-lowercase error-msg"></span>
        </label>
        <input
          type="text"
          class="form-control"
          placeholder="quantity must be a whole number"
          id="quantity"
          name="quantity"
        />
      </div>
    </div>

