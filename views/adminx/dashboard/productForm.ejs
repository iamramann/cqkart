<div class="mb-5" id="prod">
  <div class="d-flex justify-content-between align-items-center">
    <h2 class="text-capitalize text-muted">List a product</h2>
      <%# <!--! testing purpose only --> %> 
    <button type="button" id="loadSampleData" class="btn btn-outline-primary">Load sample data</button>

  </div>
  <%# fallback action-/newProduct %> 
  <form
    action="/listNewProduct"
    method="post"
    id="newProduct"
    class="mt-3 px-lg-5 py-lg-2 bg-light"
    enctype="multipart/form-data"
  >
    <div class="row">
      <div class="col-lg-8 mb-3 name">
        <label for="title" class="form-label">
          product name
          <span id="name-error" class="text-lowercase error-msg"></span>
        </label>
        <input
          type="text"
          value=""
          class="form-control"
          id="title"
          name="title"
          placeholder="enter product name"
          aria-required="true"
        />
      </div>
      <div class="col-lg-4 mb-3">
        <label for="input1" class="form-label"
          >category
          <span
            id="category-error"
            class="text-secondary text-lowercase error-msg"
          ></span>
        </label>
        <div class="mb-3">
          <select
            class="form-select"
            name="category"
            id="category"
            aria-label="Default select example"
          >
            <option selected>categories</option>
            <% allCategories.forEach((category,i) => { %>
            <option value="<%-category %>"><%= category %></option>
            <% }) %>
          </select>
        </div>
      </div>
    </div>

    <div class="row">
